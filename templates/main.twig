{% extends "home.phtml" %}
{% block content %}

    <div class="container">
        <div class="row justify-content-end">
            <div class="dropdown pt-2 pr-2">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ user }}
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="/change-password">Změna hesla</a>
                    <a class="dropdown-item" href="/logout">Odhlásit</a>
                </div>
            </div>
        </div>

        <div class="row">
            <h1 class="h1 col-12">Seznam děl</h1>
        </div>

        <form class="row mb-5 mt-5" method="post">
            <div class="col-2">
                <h3 class="h3">Filtr:</h3>
            </div>
            <div class="col-4">
                <div class="form-group row">
                    <label class="col-5"for="authorsName">Jména autorů:</label>
                    <select multiple class="form-control col-7" id="authorsName" name="authors[]">
                        {% for key, author in authors %}
                            <option>{{ author.Name }} {{ author.LastName }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="row">
                    <span class="col-5 align-self-center">Rok vydání</span>
                    <div class="col-7">
                        <div class="row mb-2">
                            <label class="col-4 align-self-center mb-0" for="yearFrom">od:</label>
                            <select class="form-control col-8" id="yearFrom" name="yearFrom">
                                <option> </option>
                                {% for key, year in years %}
                                    <option>{{ year.Year }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="row">
                            <label class="col-4 align-self-center mb-0" for="yearTo">do:</label>
                            <select class="form-control col-8" id="yearTo" name="yearTo">
                                <option> </option>
                                {% for key, year in years %}
                                    <option>{{ year.Year }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-3">
                <div class="form-group row">
                    <label class="col-5 align-self-center mb-0" for="fulltextSearch">Full-text</label>
                    <input type="text" class="form-control col-7" id="fulltextSearch" placeholder="Zadejte text" name="fulltext">
                </div>
                {#<div class="form-group">#}
                    <div class="row mb-1">
                        <label class="col-3 align-self-center mb-0" for="newWork">Nové</label>
                        <input class="col-9" type="checkbox" name="new" id="newWork" value="1">
                    </div>
                    <div class="row mb-1">
                        <label class="col-3 align-self-center mb-0" for="incompleteWork">Rozděláno</label>
                        <input class="col-9" type="checkbox" name="incopmlete" id="incompleteWork" value="1">

                    </div>
                    <div class="row mb-1">
                        <label class="col-3 align-self-center mb-0" for="checkedWork">Zkontrolováno</label>
                        <input class="col-9" type="checkbox" name="checked" id="checkedWork" value="1">

                    </div>
                    <div class="row">
                        <label class="col-3 align-self-center mb-0" for="completeWork">Hotovo</label>
                        <input class="col-9" type="checkbox" name="complete" id="completeWork" value="1">
                    </div>
                {#</div>#}
            </div>
            <div class="col-3 align-self-end">
                <button type="submit" class="btn btn-primary">Aplikovat filtr</button>
            </div>
            </form>


        <div class="row justify-content-center">
            <table id="tableWorks" class="display">
                <thead>
                <tr>
                    <th>Název</th>
                    <th>Autor</th>
                    <th>Rok</th>
                    <th>Status</th>
                    <th>Akce</th>
                    <th>Přílohy</th>
                </tr>
                </thead>
                <tbody>
                {% for key, work in works %}
                    <tr>
                        <td>{{ work.Title }}</td>
                        {#<td>{% for key2, author in  work.Authors %}#}
                                {#{% if loop.first %}#}
                                    {#{{ author[0].Name }} {{ author[0].LastName }}#}
                                    {#{% if loop.first and loop.length > 1 %}#}
                                        {#...#}
                                    {#{% endif %}#}
                                {#{% else %}#}
                                    {#<!--{{ author[0].Name }} {{ author[0].LastName }}-->#}
                                {#{% endif %}#}
                            {#{% endfor %}#}
                        {#</td>#}
                        <td>
                            {{ work.Authors[0][0].Name }} {{ work.Authors[0][0].LastName }}
                            {% if work.Authors|length > 1 %}
                                {#add title to display all authors#}
                                <span data-toggle="tooltip" data-placement="bottom" title="{% for key2, author in  work.Authors %}{% if not loop.first %}{{ author[0].Name }} {{ author[0].LastName }}{% if not loop.last %}; {% endif %}{% endif %}{% endfor %}" >...</span>
                            {% endif %}
                        </td>
                        <td>{{ work.Year }}</td>
                        <td>{{ work.Status }}</td>
                        <td>
                            <a role="button" class="btn btn-primary" href="/metadata/{{ work.WorkID }}">Metadata</a>
                            <a role="button" class="btn btn-primary" href="/text/{{ work.WorkID }}">Text</a>
                            <a role="button" class="btn btn-danger" href="/delete/{{ work.WorkID }}">Smazat</a>
                        </td>
                        <td>
                            <a role="button" class="btn btn-primary" href="/attachment/{{ work.WorkID }}">Přílohy({{ key }})</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}