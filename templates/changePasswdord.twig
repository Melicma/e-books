{% extends "home.phtml" %}

{% block content %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/content">Seznam děl <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/list-author-publisher">Seznam autorů a vydavatelů <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/new-author-publisher">Nový autor<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/new-work">Nové dílo<span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <div class="navbar-nav dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ user }}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        {% if role == 'admin' %}<a class="dropdown-item" href="/add-user">Přidat uživatele</a>{% endif %}
                        <a class="dropdown-item" href="/list-users">Seznam uživatelů</a>
                        <a class="dropdown-item" href="/logout">Odhlásit</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>


    {% if newPasswdError %}
        <div class="row justify-content-md-center">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                Chyba v novém hesle. &nbsp;&nbsp;&nbsp;
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    {% endif %}
    {% if oldPasswdError %}
        <div class="row justify-content-md-center">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                Nesprávně zadané staré heslo. &nbsp;&nbsp;&nbsp;
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    {% endif %}
    <div class="container">
        <div class="row justify-content-md-center">
            <form method="post">
                <div class="form-group">
                    <label for="inputOldPasswd"><img src="/help.svg" alt="help" class="icon" title="Zadejte současné heslo." aria-hidden="true" data-toggle="tooltip">Staré heslo</label>
                    <input type="password" class="form-control" id="inputOldPasswd" name="oldPassword" placeholder="Staré heslo">
                </div>
                <div class="form-group">
                    <label for="inputPassword1"><img src="/help.svg" alt="help" class="icon" title="Zadejte nové heslo." aria-hidden="true" data-toggle="tooltip">Nové heslo</label>
                    <input type="password" class="form-control" id="inputPassword1" name="password1" placeholder="Nove heslo">
                </div>
                <div class="form-group">
                    <label for="inputPassword2"><img src="/help.svg" alt="help" class="icon" title="Zadejte znovu nové heslo." aria-hidden="true" data-toggle="tooltip">Nové heslo znovu</label>
                    <input type="password" class="form-control" id="inputPassword2" name="password2" placeholder="Nove heslo znovu">
                </div>
                <button type="submit" class="btn btn-primary">Uložit</button>
            </form>
        </div>
    </div>
{% endblock %}